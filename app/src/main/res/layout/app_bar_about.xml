<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/dark"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Diary v7.0 (Gookhastrov) for Android"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:textColor="@color/light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Made by: Steve Mann"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:textColor="@color/light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diary for Android brings the experience of Diary© to Android"
        android:id="@+id/textView14"
        android:layout_marginTop="27dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true"
        android:textColor="@color/light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diary is your friend, you can share your thoughts and secrets with. Diary uses Triple-DES Encryption Mechanism to ensure your secrets remain safe."
        android:id="@+id/textView15"
        android:textAlignment="center"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView12"
        android:layout_alignEnd="@+id/textView12"
        android:textColor="@color/light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This app is compatible with logs of Diary© v5.0 or above for PC."
        android:id="@+id/textView16"
        android:layout_marginTop="22dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView15"
        android:layout_alignEnd="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:textColor="@color/light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Here"
        android:id="@+id/textGreet"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:textAlignment="center"
        android:textColor="@color/light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MackMannBlog"
        android:id="@+id/textView10"
        android:textAlignment="center"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-------------------------------------------------------------------"
        android:id="@+id/textView17"
        android:layout_below="@+id/textGreet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:textColor="@color/light"/>


</RelativeLayout>
