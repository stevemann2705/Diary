<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/light"
    tools:context="com.steve.diary.diary.SetupActivity"
    tools:showIn="@layout/activity_setup">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank You for choosing DiaryÂ© by Steve Mann."
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You need to enter the password that you will be using to login. Also you need to enter your name."
        android:id="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/textView6"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginStart="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPass"
        android:hint="Enter Password"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignEnd="@+id/textView3"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next, you need to enter the key. This key will be used for encryption."
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Key"
        android:layout_marginRight="5dp"
        android:id="@+id/textView9"
        android:layout_marginTop="36dp"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textKey"
        android:hint="Enter Key"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/textName"
        android:layout_alignEnd="@+id/textName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/textView"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Your Name"
        android:ems="10"
        android:id="@+id/textName"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/textPass"
        android:layout_alignEnd="@+id/textView3" />
</RelativeLayout>
